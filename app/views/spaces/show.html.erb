<% content_for :image, image_url(@space.featured_image.image_url(:medium))%>
<% content_for :description, seo_description((@space.description.strip_tags.truncate(120, separator: ' '))) %>
<% content_for :title, "Stara Pekara - " + @space.name %>

<div class="layout--main flex flex--column">
  <% unless @space.space_images.blank? %>
    <% @space.space_images.each do |image| %>
      <%= link_to image_tag(image.image), image_url(image.image), data: {lightbox: 'space', title: @space.name} %>
    <% end %>
  <% end %>
  <div class="space flex flex--column">
    <h1 class="space-name">
      <%= @space.name %>
    </h1>
    <span class="space-description">
      <%= @space.description.html_safe %>
    </span>
  
    <div class="space-price-info flex flex--row flex--center">
      <div class="space-price-box flex flex--column flex--center">
        <span class="space-price"><%= humanized_money_with_symbol(@space.book_price) %></span>
        <p class="space-price-box__info">po satu</p>
      </div>
      <div class="space-price-box flex flex--column flex--center">
        <span class="space-price"><%= surface(@space.surface_area) %></span>
        <p class="space-price-box__info">na raspolaganju</p>
      </div>
      <% if  @space.bookable %>
    </div>
  
    <% end %>
    <% if  @space.rentable %>
      <p><span><%= humanized_money_with_symbol(@space.rent_price) %></span>
        mjeseÄno</p>
    <% end %>
    <% if @space.available %>
      <%= link_to t('space.rent_monthly', price: humanized_money_with_symbol(@space.rent_price)), new_space_rent_request_space_path(@space), class: 'btn--primary section__button' if @space.rentable %>
      <%= link_to t('space.rent_hourly', price: humanized_money_with_symbol(@space.book_price)), booking_general_space_path(@space), class: 'btn--primary section__button' if @space.bookable %>
    <% else %>
      <%= t('space.unavailable') %>
    <% end %>
  </div>
  
</div>